@page
@model ServiceTypes.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-info">Create Service Type</h2><br />


<form method="post">
    <div class="backgroundWhite">
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="ServiceType.ServiceName"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="ServiceType.ServiceName" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.ServiceName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="ServiceType.ServicePrice"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="ServiceType.ServicePrice" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.ServicePrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-offset-3">
                <partial name="_CreateAndBackToListButton"/>
            </div>
        </div>   
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}