@page
@model SparkAuto.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />

<div class="backgroundWhite">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-info">Service Type List</h2>
        </div>
        <div class="col-lg-6 text-right">
            <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br/>

    <div>
        @if (Model.ServiceType.Count == 0)
        {
            <p>No service types exists. Please create a new service type.</p>
        }
        else
        {
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceType[0].ServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceType[1].ServicePrice)
                    </th>
                    <th></th>
                </tr>
                <tbody>
                    @foreach (var item in Model.ServiceType)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.ServiceName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ServicePrice)
                            </td>
                            <td>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

